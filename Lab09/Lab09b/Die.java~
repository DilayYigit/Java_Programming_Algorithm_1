/*
 ** A simple class for simulating die throws
 */

public class Die {

    // Properties

    private int value;

    // Constructors

    public Die(){
        value = (int) (Math.random() * 6 + 1);
    }

    // Methods

    public int roll() {
        value = (int) (Math.random() * 6 + 1);
        return value;
    }
    public int getFaceValue(){
        return value;
    }

    public String toString(){
        return value + "";
    }

}